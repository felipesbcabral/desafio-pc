# Use the official .NET 8 SDK image for building
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy solution file
COPY DebtManager-Challenge.sln ./

# Copy project files
COPY DebtManager.Api/DebtManager.Api.csproj DebtManager.Api/
COPY DebtManager.Core/DebtManager.Core.csproj DebtManager.Core/
COPY DebtManager.Tests/DebtManager.Tests.csproj DebtManager.Tests/

# Restore dependencies
RUN dotnet restore

# Copy all source code
COPY . .

# Build the application
RUN dotnet build -c Release --no-restore

# Publish the API project
RUN dotnet publish DebtManager.Api/DebtManager.Api.csproj -c Release -o /app/publish --no-restore

# Use the official .NET 8 runtime image for running
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app

# Install Entity Framework tools for migrations
RUN dotnet tool install --global dotnet-ef
ENV PATH="$PATH:/root/.dotnet/tools"

# Copy published application
COPY --from=build /app/publish .

# Copy source code for EF migrations (needed for dotnet ef commands)
COPY --from=build /src .

# Expose port
EXPOSE 8080

# Set entry point
ENTRYPOINT ["dotnet", "DebtManager.Api.dll"]